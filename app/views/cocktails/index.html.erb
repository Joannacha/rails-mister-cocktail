<div class="banner">
  <div class="container">
    <h1>Cocktails at<strong> home </strong> for <strong>lockdown</strong>!</h1>
    <p>Find some cocktails to get wasted during theses hard times.</p>
    <a class="btn btn-light" href="/cocktails/new">Add a cocktail</a>
  </div>
</div>

<div class="container py-3">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @cocktails.each do |cocktail| %>
        <div class="carousel-item active">
          <div class="card mb-3">
            <div class="card-image">
              <img src="https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=701&q=80" class="d-block w-100">
            </div>
            <div class="card-info mb-3 p-3">
              <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
              <p>Product description with <strong>relevant info</strong> only.</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>   
  </div> 
</div>
