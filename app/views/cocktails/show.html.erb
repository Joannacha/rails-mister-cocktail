<h2><%= @cocktail.name %></h2>
<ul>
<% @cocktail.doses.each do |dose| %>
   <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to 'Remove', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to 'Add the recipe', new_cocktail_dose_path(@cocktail)  %>